<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.splash.SplashFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/splash_image_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.446">

        <ImageView
            android:id="@+id/splash_lorem"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_lorem"
            app:layout_constraintBottom_toBottomOf="@id/splash_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/splash_title" />

        <TextView
            android:id="@+id/splash_title"
            style="@style/roboto_bold_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:text="@string/application_title_name"
            app:layout_constraintLeft_toRightOf="@id/splash_lorem"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/splash_title_sub"
            style="@style/roboto_thin_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Lorem lpsum for photos."
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/splash_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>